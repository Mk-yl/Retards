                </Grid>
                
                <!-- Ajout d'un bouton supprimmer  -->
                <Button FontSize="12" Background="Red" Content="Supprimer cette statistique" HorizontalAlignment="Right"
                      Width="150px"  Click="DeleteStatistics_Click" Margin="0,20,0,20" />
              

                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>